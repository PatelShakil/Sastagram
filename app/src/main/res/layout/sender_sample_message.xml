<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginTop="8dp">
    <TextView
        android:id="@+id/sender_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sender"
        android:autoLink="web"
        android:textSize="15sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/sent_message_background"
        app:layout_constraintWidth_percent="0.8"/>
    <TextView
        android:id="@+id/send_message_datetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sender_tv"
        app:layout_constraintRight_toRightOf="@+id/sender_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="12:57"
        android:textSize="10sp"
        android:fontFamily="@font/tajawal_medium"
        android:layout_marginEnd="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>